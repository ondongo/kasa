// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ========== MODELS ==========

model User {
  id             String    @id @default(cuid())
  email          String    @unique
  name           String?
  firstName      String?
  lastName       String?
  phoneNumber    String?
  password       String?
  emailVerified  DateTime?
  phoneVerified  DateTime?
  image          String?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  accounts             Account[]
  sessions             Session[]
  memberships          Membership[]
  preferences          UserPreferences?
  trustedDevices       TrustedDevice[]
  sentInvitations      CoupleInvitation[] @relation("InvitationSender")
  receivedInvitations  CoupleInvitation[] @relation("InvitationReceiver")
  notifications        Notification[]
  subscription         Subscription?
  payments             Payment[]
  tontines             Tontine[]
  tontineMembers       TontineMember[]
  tontineContributions TontineContribution[]

  @@map("users")
}

model UserPreferences {
  id        String   @id @default(cuid())
  userId    String   @unique
  currency  String   @default("EUR") // EUR, USD, XAF, etc.
  language  String   @default("fr")  // fr, en, ln, wo, etc.
  theme     String   @default("dark") // light, dark, system
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_preferences")
}

enum SubscriptionStatus {
  TRIAL       // Essai gratuit (30 jours)
  ACTIVE      // Abonnement actif
  EXPIRED     // Abonnement expiré
  CANCELLED   // Abonnement annulé
}

model Subscription {
  id                String             @id @default(cuid())
  userId            String             @unique
  status            SubscriptionStatus @default(TRIAL)
  startDate         DateTime           @default(now())
  endDate           DateTime?          // Date de fin d'abonnement
  trialEndsAt       DateTime?          // Date de fin d'essai
  paydunya_token    String?            // Token de transaction PayDunya
  paydunya_status   String?            // Statut du paiement PayDunya
  amount            Int                @default(2000) // 2000 FCFA
  currency          String             @default("XOF") // FCFA
  lastPaymentDate   DateTime?
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model Payment {
  id                String   @id @default(cuid())
  userId            String
  amount            Int      // Montant en FCFA
  currency          String   @default("XOF")
  status            String   // pending, completed, failed
  paydunya_token    String   @unique
  paydunya_status   String?
  method            String?  // orange_money, mtn_money, moov_money, etc.
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("payments")
}

model TrustedDevice {
  id          String   @id @default(cuid())
  userId      String
  name        String
  deviceType  String   // mobile, tablet, laptop
  userAgent   String   @db.Text
  ipAddress   String?
  location    String?
  lastUsedAt  DateTime @default(now())
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("trusted_devices")
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  DECLINED
  EXPIRED
}

model CoupleInvitation {
  id         String           @id @default(cuid())
  senderId   String
  receiverEmail String
  receiverId String?
  status     InvitationStatus @default(PENDING)
  token      String           @unique
  expiresAt  DateTime
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @updatedAt

  sender   User  @relation("InvitationSender", fields: [senderId], references: [id], onDelete: Cascade)
  receiver User? @relation("InvitationReceiver", fields: [receiverId], references: [id], onDelete: Cascade)

  @@map("couple_invitations")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

enum Role {
  OWNER
  MEMBER
}

model Household {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  memberships         Membership[]
  transactions        Transaction[]
  categories          Category[]
  investmentEnvelopes InvestmentEnvelope[]
  recurringTemplates  RecurringTemplate[]

  @@map("households")
}

model Membership {
  id           String   @id @default(cuid())
  userId       String
  householdId  String
  role         Role     @default(MEMBER)
  partnerName  String? // "ME" or "PARTNER" display name
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@unique([userId, householdId])
  @@map("memberships")
}

enum TransactionType {
  INCOME
  EXPENSE
  INVESTMENT
}

enum Owner {
  ME
  PARTNER
  SHARED
}

enum RecurringFrequency {
  MONTHLY
  QUARTERLY
  YEARLY
}

model Transaction {
  id          String          @id @default(cuid())
  householdId String
  type        TransactionType
  month       String // Format: "YYYY-MM"
  label       String
  amount      Int // En centimes (ou unités pour devises sans centimes)
  currency    String          @default("EUR") // Devise de la transaction
  owner       Owner           @default(SHARED)

  categoryId           String?
  subcategoryId        String?
  investmentEnvelopeId String?

  isRecurring      Boolean             @default(false)
  recurringRule    RecurringFrequency?
  startMonth       String? // Format: "YYYY-MM"
  endMonth         String? // Format: "YYYY-MM"
  recurringTemplateId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  household           Household           @relation(fields: [householdId], references: [id], onDelete: Cascade)
  category            Category?           @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  subcategory         Subcategory?        @relation(fields: [subcategoryId], references: [id], onDelete: SetNull)
  investmentEnvelope  InvestmentEnvelope? @relation(fields: [investmentEnvelopeId], references: [id], onDelete: SetNull)
  recurringTemplate   RecurringTemplate?  @relation(fields: [recurringTemplateId], references: [id], onDelete: SetNull)

  @@index([householdId, month])
  @@index([householdId, type])
  @@map("transactions")
}

model Category {
  id          String          @id @default(cuid())
  householdId String
  name        String
  type        TransactionType // EXPENSE ou INCOME
  color       String? // Hex color
  order       Int             @default(0)
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  household      Household      @relation(fields: [householdId], references: [id], onDelete: Cascade)
  subcategories  Subcategory[]
  transactions   Transaction[]

  @@unique([householdId, name, type])
  @@map("categories")
}

model Subcategory {
  id         String   @id @default(cuid())
  categoryId String
  name       String
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  category     Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([categoryId, name])
  @@map("subcategories")
}

model InvestmentEnvelope {
  id          String   @id @default(cuid())
  householdId String
  name        String
  color       String? // Hex color
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household    Household     @relation(fields: [householdId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([householdId, name])
  @@map("investment_envelopes")
}

model RecurringTemplate {
  id          String              @id @default(cuid())
  householdId String
  type        TransactionType
  label       String
  amount      Int // En centimes
  owner       Owner               @default(SHARED)

  categoryId           String?
  subcategoryId        String?
  investmentEnvelopeId String?

  frequency  RecurringFrequency
  startMonth String // Format: "YYYY-MM"
  endMonth   String? // Format: "YYYY-MM"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  household      Household       @relation(fields: [householdId], references: [id], onDelete: Cascade)
  transactions   Transaction[]

  @@index([householdId])
  @@map("recurring_templates")
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model Notification {
  id        String           @id @default(cuid())
  userId    String
  type      NotificationType @default(INFO)
  title     String
  message   String           @db.Text
  read      Boolean          @default(false)
  actionUrl String?
  createdAt DateTime         @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, read])
  @@map("notifications")
}

// ========== TONTINE MODELS ==========

enum TontineStatus {
  DRAFT       // En préparation
  ACTIVE      // En cours
  COMPLETED   // Terminée
  CANCELLED   // Annulée
}

enum TontineFrequency {
  WEEKLY      // Hebdomadaire
  BIWEEKLY    // Toutes les 2 semaines
  MONTHLY     // Mensuel
  CUSTOM      // Personnalisé
}

model Tontine {
  id          String           @id @default(cuid())
  name        String
  description String?          @db.Text
  creatorId   String
  amount      Int              // Montant de la contribution en centimes
  currency    String           @default("XOF") // FCFA par défaut
  frequency   TontineFrequency @default(MONTHLY)
  status      TontineStatus    @default(DRAFT)
  startDate   DateTime?        // Date de début
  endDate     DateTime?        // Date de fin estimée
  inviteCode  String           @unique // Code pour rejoindre la tontine
  maxMembers  Int              @default(10) // Nombre maximum de membres
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  creator       User                  @relation(fields: [creatorId], references: [id], onDelete: Cascade)
  members       TontineMember[]
  rounds        TontineRound[]
  contributions TontineContribution[]

  @@map("tontines")
}

enum TontineMemberStatus {
  PENDING   // Invitation en attente
  ACTIVE    // Membre actif
  INACTIVE  // Membre inactif
  REMOVED   // Membre retiré
}

model TontineMember {
  id         String              @id @default(cuid())
  tontineId  String
  userId     String
  status     TontineMemberStatus @default(PENDING)
  turnOrder  Int?                // Ordre de passage pour recevoir l'argent
  hasReceived Boolean            @default(false) // A déjà reçu la cagnotte
  joinedAt   DateTime            @default(now())
  updatedAt  DateTime            @updatedAt

  tontine       Tontine               @relation(fields: [tontineId], references: [id], onDelete: Cascade)
  user          User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  contributions TontineContribution[]

  @@unique([tontineId, userId])
  @@index([tontineId, status])
  @@map("tontine_members")
}

model TontineRound {
  id            String    @id @default(cuid())
  tontineId     String
  roundNumber   Int       // Numéro du tour
  recipientId   String?   // ID du membre qui reçoit ce tour
  dueDate       DateTime  // Date limite de contribution
  amount        Int       // Montant total à collecter
  collectedAmount Int     @default(0) // Montant collecté
  isPaid        Boolean   @default(false) // L'argent a été versé au bénéficiaire
  paidAt        DateTime? // Date de versement
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  tontine       Tontine               @relation(fields: [tontineId], references: [id], onDelete: Cascade)
  contributions TontineContribution[]

  @@unique([tontineId, roundNumber])
  @@index([tontineId, dueDate])
  @@map("tontine_rounds")
}

enum ContributionStatus {
  PENDING   // En attente
  PAID      // Payée
  LATE      // En retard
  MISSED    // Manquée
}

model TontineContribution {
  id        String             @id @default(cuid())
  tontineId String
  roundId   String
  memberId  String
  userId    String
  amount    Int                // Montant de la contribution
  status    ContributionStatus @default(PENDING)
  paidAt    DateTime?          // Date de paiement
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  tontine Tontine       @relation(fields: [tontineId], references: [id], onDelete: Cascade)
  round   TontineRound  @relation(fields: [roundId], references: [id], onDelete: Cascade)
  member  TontineMember @relation(fields: [memberId], references: [id], onDelete: Cascade)
  user    User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roundId, memberId])
  @@index([tontineId, userId])
  @@index([roundId, status])
  @@map("tontine_contributions")
}
